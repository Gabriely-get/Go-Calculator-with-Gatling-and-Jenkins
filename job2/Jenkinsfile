pipeline {
    agent any

    stages {
        stage('Download Gatling') {
            steps {
                sh 'pwd'
                sh "curl -LO https://repo1.maven.org/maven2/io/gatling/highcharts/gatling-charts-highcharts-bundle/3.9.0/gatling-charts-highcharts-bundle-3.9.0-bundle.zip"
            }
        }
        stage('Extract Gatling') {
            steps {
                sh '''#!/bin/bash
                    if [ "$(dir /var/jenkins_home/workspace/Calculator-Gatling-Stress-Test | grep gatling-charts-highcharts-bundle-3.9.0)" < 2 ];
                    then 
                        unzip /var/jenkins_home/workspace/Calculator-Gatling-Stress-Test/gatling-charts-highcharts-bundle-3.9.0-bundle.zip
                    else
                        rm -r /var/jenkins_home/workspace/Calculator-Gatling-Stress-Test/gatling-charts-highcharts-bundle-3.9.0
                        unzip /var/jenkins_home/workspace/Calculator-Gatling-Stress-Test/gatling-charts-highcharts-bundle-3.9.0-bundle.zip
                    fi
                '''
            }
        }
        stage('Copy script to Gatling') {
            steps {
                sh 'cd /gatling-charts-highcharts-bundle-3.9.0/user-files/simulations'
                sh 'mkdir calculator && rm -r computerdatabase/'
                sh 'cp ../../../CalculatorStressTestSimulation.java .'
            }
        }
    }
}